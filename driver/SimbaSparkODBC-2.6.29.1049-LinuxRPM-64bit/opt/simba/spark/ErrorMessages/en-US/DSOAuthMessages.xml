<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE Messages [
  <!ELEMENT Messages (Package*)>

  <!ELEMENT Package (Error*)>
  <!ATTLIST Package ID CDATA #REQUIRED>
  <!ATTLIST Package DefaultComponent CDATA #REQUIRED>

  <!ELEMENT Error (#PCDATA)>
  <!ATTLIST Error Key ID #REQUIRED>
  <!ATTLIST Error Component CDATA #IMPLIED>
  <!ATTLIST Error NativeErrorCode CDATA #REQUIRED>
  <!ATTLIST Error Params CDATA "0">
]>

<Messages>
    <!-- Package DS_ERROR. ID corresponds to the DS_ERROR constant defined in DriverSupport.h -->
    <Package ID="870" DefaultComponent="DriverOAuthSupport">
        <!-- Error thrown when an error occurs while trying to load a string resource for the dialog. -->
        <Error Key="OAuthConnectionError" Params="1" NativeErrorCode="8700">OAuth Connection Error: %1%</Error>

        <!-- Error thrown when libcurl encounters an error. -->
        <Error Key="OAuthAPIErr" Params="1" NativeErrorCode="8701">Error interacting with REST API: %1%</Error>

        <!-- Error thrown when unable to sign a JWT signature. -->
        <Error Key="OAuthSignJwtFail" Params="0" NativeErrorCode="8702">Unable to sign JWT signature.</Error>

        <!-- Error thrown when JSON type is not service acount. -->
        <Error Key="OAuthJSONKeyIncorrectType" Params="0" NativeErrorCode="8703">Supported types are service_account and authorized_user.</Error>

        <!-- Error thrown when user does not provide all infomation for service account. -->
        <Error Key="OAuthServiceAccountError" Params="0" NativeErrorCode="8704">Service account information is incomplete. Please provide private_key, private_key_id, client_email, client_id.</Error>

        <!-- Error thrown when user does not provide all infomation for authorized user. -->
        <Error Key="OAuthAuthorizedUserError" Params="0" NativeErrorCode="8705">Authorized user information is incomplete. Please provide client_id, client_secret and refresh_token.</Error>

        <!-- Error thrown when unable to find or open a key file. -->
        <Error Key="OAuthKeyOpenFail" Params="1" NativeErrorCode="8706">Unable to find or open file from: %1%</Error>

        <!-- Error thrown when unable to get private key for JSON. -->
        <Error Key="OAuthJSONPrivateKeyParseFail" Params="0" NativeErrorCode="8707">Unable to parse private key from the JSON key file.</Error>

        <!-- Error thrown when unable to get private key for JSON. -->
        <Error Key="OAuthJSONCertificateParseFail" Params="0" NativeErrorCode="8708">Unable to parse certificates from the JSON key file.</Error>

        <!-- Error thrown when the JSON parsing fails while retrieving data. -->
        <Error Key="OAuthJSONParsingFailedData" Params="1" NativeErrorCode="8709">JSON parsing failed when retrieving data: %1%</Error>

        <!-- Error thrown when unable to parse a .p12 file. -->
        <Error Key="OAuthP12ParseFail" Params="0" NativeErrorCode="8710">Unable to parse private key and certificates.</Error>

        <!-- Error thrown when authentication fails. -->
        <Error Key="OAuthAuthFail" Params="1" NativeErrorCode="8711">Authentication failed: %1%</Error>

        <!-- Error thrown when there is no refresh token available to refresh the access token. -->
        <Error Key="OAuthNoRefreshToken" Params="0" NativeErrorCode="8712">No refresh token available to refresh the access token.</Error>

        <!-- Error thrown when the request type of REST API is unknown. -->
        <Error Key="OAuthAPIUnknownRequestType" Params="1" NativeErrorCode="8713">Unknown REST API request type: %1%</Error>

        <!-- Error thrown when no access token nor auth code provided in completed URI in ODBC4 web flow. -->
        <Error Key="OAuthNoAuthCode" Params="0" NativeErrorCode="8714">Invalid complieted URI: no access token nor authentication token provided</Error>

        <!-- Error thrown when the specified oauth mechanism is unknown. -->
        <Error Key="OAuthUnknownMech" Params="1" NativeErrorCode="8715">Unknown OAuth mechanism: %1%</Error>

        <!-- Error thrown when the sequence of oauth is wrong. -->
        <Error Key="OAuthSequenceErr" Params="0" NativeErrorCode="8716">OAuth sequence error.</Error>
    </Package>
</Messages>
